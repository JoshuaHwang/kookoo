doctype html
html(lang="en-us")
  head
    title KooKoo Grill
    meta(http-equiv="X-US-Compatible" content="IE=Edge")
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")    
    //- BOOTSTRAP
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous")  
    //- FONT AWESOME
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css")
    //- SCROLL REVEAL
    script(src="https://unpkg.com/scrollreveal/dist/scrollreveal.min.js")
    //- GOOGLE FONTS
    link(link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,600,700|Dosis:300,400,700|Josefin+Sans:700" rel="stylesheet")
    //- CSS
    link(href="public/css/default.css" rel="stylesheet" type="text/css")
  body
    nav.navbar.fixed-top
      div.fixed-logo-div 
        a(data-scroll href="topLink" id="fixedTopLink" class="fixed-logo") KOOKOO#[span.fixed-grill GRILL]
      div.fixed-navlinks-div
        a(data-scroll href="#aboutLink" id="fixedAboutLink" class="nav-links") ABOUT
        a(data-scroll href="#menuLink" id="fixedMenuLink" class="nav-links") MENU     
        //- a(href="/" class="my-name")
        //-   img(src="public/images/kookoo-logo.png" class="logo")                     
        a(data-scroll href="#contactLink" id="fixedContactLink" class="nav-links") CONTACT
        a(href="#" class="nav-links phone") (714) 603-7665      
    div.container-fluid.hook-container
      div.row
        div.col-sm-12
          div.hook-div
            img(src="public/images/kookoo-logo.png" class="hook-logo")
            p.hook KOOKOO#[span.grill GRILL]
            p.fusionyaki FUSIONYAKI
            p.neon NOW OPEN            
          div.hooklinks-div
            a(data-scroll href="#aboutLink" id="aboutLink" class="links") ABOUT
            a(data-scroll href="#menuLink" id="menuLink" class="links") MENU            
            a(data-scroll href="#contactLink" id="contactLink" class="links") CONTACT
    div.container#about-container
      div.row        
        div.col-sm-6
          div.image-container
            img(src="public/images/owners.jpg" class="owners-image")
        div.col-sm-6
          div.about-description
            p#about ABOUT
            p.about KooKoo Grill is a casual fusion teriyaki joint located in the heart of Anaheim, California. Family owned and operated, our goal is to serve our customers tasty food seasoned with love!
    div.container-fluid#gallery-container
      div.row#gallery-row
        div.col-sm-12
          p.gallery GALLERY
          div(id="carouselExampleControls" class="carousel slide" data-ride="carousel")
            div(class="carousel-inner" role="listbox")
              div(class="carousel-item active")
                img(class="d-block img-fluid carousel-img" src="public/images/chicken-bowl.jpg" alt="First slide")
              div(class="carousel-item")
                img(class="d-block img-fluid carousel-img" src="public/images/kookoo-balls.jpg" alt="Second slide")
              div(class="carousel-item")
                img(class="d-block img-fluid carousel-img" src="public/images/wrap.jpg" alt="Third slide") 
              div(class="carousel-item")
                img(class="d-block img-fluid carousel-img" src="public/images/tacos.jpg" alt="Fourth slide") 
              div(class="carousel-item")
                img(class="d-block img-fluid carousel-img" src="public/images/cali-rolls.jpg" alt="Fifth slide") 
            a(class="carousel-control-prev carousel-btn" href="#carouselExampleControls" role="button" data-slide="prev")
              span(class="carousel-control-prev-icon" aria-hidden="true")
              span(class="sr-only") Previous
            a(class="carousel-control-next carousel-btn" href="#carouselExampleControls" role="button" data-slide="next")
              span(class="carousel-control-next-icon" aria-hidden="true")
              span(class="sr-only") Next
    div.container#menu-container       
      div.row
        div.col-sm-12.menu-col          
          p.menu-label MENU
          p.menu-description We offer a variety of fusion items as well as a few traditional items. Our goal is to provide our customers a delicious meal in a fast and casual dining environment. Click below to view a PDF version of our menu!
          a(href="public/images/menu.pdf" target="_blank")
            button(type="button" class="btn btn-default") PDF MENU
    div.container-fluid#contact-container
      div.row#contact-row
        div.col-sm-4
          p.contact-title HOURS
          p.contact-label MON #[span.contact-description 10:00AM - 9:00PM]
          p.contact-label TUE #[span.contact-description 10:00AM - 9:00PM]
          p.contact-label WED #[span.contact-description 10:00AM - 9:00PM]
          p.contact-label THU #[span.contact-description 10:00AM - 9:00PM]
          p.contact-label FRI #[span.contact-description 10:00AM - 9:00PM]
          p.contact-label SAT #[span.contact-description 11:00AM - 9:00PM]
          p.contact-label SUN #[span.contact-description WE ARE CLOSED]          
          p.contact-label WE CLOSE ON ALL MAJOR HOLIDAYS
        div.col-sm-4
          div#map         
        div.col-sm-4
          p.contact-title CONTACT
          p.contact-label ADDRESS #[span.contact-description 202 W Lincoln Ave, Anaheim, CA 92805]
          p.contact-label PHONE #[span.contact-description (714) 603-7665]
          p.contact-label EMAIL #[span.contact-description KOOKOOGRILL@GMAIL.COM]          
          div.social-div
            a(href="https://www.facebook.com/KooKooGrill/" target="_blank") 
              i(class="fa fa-facebook social-links" aria-hidden="true")
            a(href="https://www.yelp.com/biz/kookoo-grill-the-original-anaheim-10" target="_blank") 
              i(class="fa fa-yelp social-links" aria-hidden="true")
          p.contact-label.catering We also offer catering, please call us for details!
    div.container-fluid.creator-container
      div.row 
        div.col-sm-12
          p.creator SITE BY 
            a(href="#" class="josh") JOSHUA HWANG
